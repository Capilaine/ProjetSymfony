{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <header>
        <a href="{{path('accueil')}}">
            <img src="{{asset('img/logoShop.png')}}" alt="Logo del'entreprise" class="logo">
        </a>
        <div class="titre">
            <h1>Administration des produits</h1>
        </div>
        <button class="bouton" onclick="window.location.href='{{ path('liste_produits') }}'"><span>Vers tous nos produits</span></button>
    </header>

    <main class="product-container">
        {% for produit in tousProduits %}
            <div class="product-item">
                <div>
                    <a href="{{ path('infos_produit_admin', {'id': produit.id}) }}">
                        <img src="{{ asset(produit.getImage()) }}" alt="{{ produit.nom }}" class="product-image-liste">
                        <p>{{ produit.nom }}</p>
                    </a>
                </div>
            </div>
        {% endfor %}

    <div class="formajouttitre">
        <h1>Ajouter un produit</h1>
    </div>

    <div class="formajout">
        <form method="post" action="{{ path('ajouter_produit') }}">
            <div>
                <label for="name">Nom :</label>
                <input type="text" id="name" name="nom" value="">
            </div>
            <div>
                <label for="description">Description :</label>
                <textarea id="description" name="description"></textarea>
            </div>
            <div>
                <label for="stock">Stock :</label>
                <input type="number" id="stock" name="stock" value="">
            </div>
            <div>
                <label for="image">Image :</label>
                <input type="file" id="image" name="image">
            </div>
            <button type="submit">Ajouter</button>
        </form>
    </div>
    </main>

    <div class="admin">
        <button class="bouton" onclick="window.location.href='{{ path('app_logout') }}'"><span>DÃ©connexion</span></button>
    </div>
{% endblock %}